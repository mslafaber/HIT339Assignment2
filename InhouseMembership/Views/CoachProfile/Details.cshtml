@model InhouseMembership.Models.CoachProfile

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>CoachProfile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Education)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Education)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interests)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Interests)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Experience)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Experience)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Skills)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Skills)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Biography)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Biography)
        </dd>
        <dt class="col-sm-2">
            Profile Image
        </dt>
        <dd class="col-sm-10">
            <!-- show profile image -->
            <img src="@("~/image/" + Model.ImagePath)" asp-append-version="true" width="300px" height="300px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coach)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coach.Id)
        </dd>
    </dl>
</div>

<!-- admins and coaches can edit and delete coach profiles -->
@if (!User.IsInRole("Member"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.CoachProfileId">Edit</a> |
        <a asp-action="Delete" asp-route-id="@Model.CoachProfileId">Delete</a>
    </div>

}


